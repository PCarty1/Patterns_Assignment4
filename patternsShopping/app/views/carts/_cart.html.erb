<table>
<%@cart.lineitems.each.do |item| %>
<tr>    
	<td><div class="item"><%= item.quantity %> &times;</td></div>
	<td><div class="item"><%= item.product.title %></td></div>	
	<td><div class="item"><%= number_to_euro(item.product.price)%></td></div>
	</tr>
  <% end %>  
</table>

<%= button_to 'Empty cart', @cart, method: :delete, confirm: 'Are you sure?' %>
<%= button_to "Checkout", new_order_path, :method => :get %>  
